<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bounswegroup2.eatright.SettingsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingr_listview_settings"
                android:layout_below="@+id/mAutoTVForSettings"
                android:choiceMode="multipleChoiceModal"
                android:visibility="gone"/>

        <MultiAutoCompleteTextView
            android:id="@+id/mAutoTVForSettings"
            android:hint="@string/allergic_ingredients"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <CheckBox
            android:text="Vegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:id="@+id/checkBox"
            android:layout_below="@+id/mAutoTVForSettings"
            android:layout_toStartOf="@+id/mAutoTVForSettings" />

        <Button
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_save_settings"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</FrameLayout>
