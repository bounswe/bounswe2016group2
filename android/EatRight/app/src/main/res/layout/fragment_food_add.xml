<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bounswegroup2.eatright.FoodAddFragment">

        <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:layout_above="@+id/buttonLayouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableLayoutAddFood">
                <TableRow android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextViewIngr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:hint="@string/add_ingredient" />
                    <EditText
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/amountEText"
                        android:textColorHint="@color/transparent"
                        android:inputType="numberDecimal"
                        android:tag="M"
                        android:maxLines="1" />
                        />
                    <TextView android:id="@+id/unitTV"
                        android:tag="UTV"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                    <EditText
                        android:tag="V"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/valueEText"
                        android:textColorHint="@color/transparent"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />
                    <TextView android:id="@+id/valueTV"
                        android:tag="VTV"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <ImageButton
                        android:layout_weight="1"
                        android:id="@+id/removeRow"
                        android:src="@android:drawable/ic_delete"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        />
                </TableRow>
            </TableLayout>
        </ScrollView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/listForTags"
            android:layout_marginBottom="65dp"
            android:layout_marginTop="45dp">

        </ListView>
        <LinearLayout
            android:id="@+id/buttonLayouts"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foodDesc"
                android:hint="Description"
                android:inputType="textMultiLine"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText android:hint="@string/name"
                    android:id="@+id/nameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagET"
                    android:maxLines="1"
                    android:hint="TAG"
                    android:layout_gravity="start"/>
            <Button
                android:id="@+id/buttonAdd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add" />

            <Button
                android:layout_weight="1"
                android:layout_gravity="end"
                android:id="@+id/addFoodSubmitBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"/>
                <Button
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:id="@+id/addTagsButt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE TAGS"/>
            </TableRow>
        </LinearLayout>

</FrameLayout>
